
<div id="block-{{ block.id }}" class="sports-team-info" style=" padding: 1rem; border-radius: 10px">
  <div  style="display: flex; justify-content: space-between"> 
  {% if product.metafields.custom.sports_team_name %}
    <h2 class="{% if block.settings.additional_classes %} show {% endif %} " > {{ product.metafields.custom.sports_team_name }}</h2>
  {% endif %}
  {% if product.metafields.custom.team_image %}
    <img src="{{ product.metafields.custom.team_image | file_url }}" style="border-radius: 50px" alt="{{ product.metafields.custom.sports_team_name }}" width="100" height="100">
  {% endif %}
 </div>
  {% if product.metafields.custom.team_url %}
    <a href="{{ product.metafields.custom.team_url }}" style="text-decoration: none" target="_blank">TeamÂ´s Website</a>
  {% endif %}

</div>

<style>
  #block-{{ block.id }} {
    background-color: {{ block.settings.background_color }};
  }
  .show{
    display:none
  } 
</style>

{% schema %}
{
  "name": "Team Displair",
  "target": "section",
  "settings": [
    {
      "type": "color",
      "id": "background_color",
      "label": "Background Color"
    },
    {
      "type": "checkbox",
      "id": "additional_classes",
      "label": "Show / Hide team info",
      "default": "true"
    }
  ]
}
{% endschema %}

